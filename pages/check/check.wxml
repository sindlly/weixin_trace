<!--pages/check/check.wxml-->
<image src='{{banner}}' class="banner"></image>
<view  wx:for-items='{{bind_goods}}' wx:key="{{item}}">
<van-panel title="{{item.name}}">
    <van-card
    commission="{{item.attributes[0].name}}:{{item.attributes[0].value}}"
    desc="生产厂商：{{item.manufacturer}}"
    title="条形码：{{item.barcode}}"
    stageProportion="描述：{{item.description}}"
    thumb="{{baseUrl}}/files/{{ item.image }}"
    />
</van-panel>
</view>
<van-panel title="溯源码生命周期">
  <van-steps
  steps="{{ steps }}"
  active="{{ active }}"
  direction="vertical"
  active-color="#27a9e7"
/>
</van-panel>

<view class='my_center_container'>
  <van-button type="danger" class='commit-btn'  size="large" bindtap='commit'>确认收货</van-button>
</view>
 
