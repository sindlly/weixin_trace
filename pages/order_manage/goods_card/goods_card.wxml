<!--pages/order_manage/goods_card/goods_card.wxml-->

<view class='my_container order_container' wx:for-items='{{perentData}}' wx:key="{{item}}">
<van-panel
  >
     <van-card
      tag="{{item.tag==1?'待报价':item.tag==2?'待付款':item.tag==3?'待发货':item.tag==4?'已发货':''}}"
      price="10.00"
      desc="描述信息"
      title="商品标题xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
      thumb="http://img.zcool.cn/community/012e3b554311800000019ae95629f5.jpg@2o.jpg"
    >
    <view slot="footer">
      <van-button size="small" round type="info" plain style='margin-right:10px'>查看物流</van-button>
      <van-button size="small" round type="danger">支付尾款</van-button>
    </view>
  </van-card>
  </van-panel>
</view>

